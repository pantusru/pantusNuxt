{
  "name": "pantus",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build --nomap",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lint": "npm run lint:js && npm run lint:style",
    "prettier": "prettier --write {components,store,mixins,pages,assets}/**/*.{js,ts,vue,css,sass,less,scss}",
    "lint:all": "npm run lint && npm run prettier",
    "storybook": "nuxt storybook",
    "storybook:build": "nuxt storybook build"
  },
  "dependencies": {
    "@nodelib/fs.walk": "^1.2.6",
    "@nuxtjs/axios": "^5.13.1",
    "@nuxtjs/google-analytics": "^2.4.0",
    "@nuxtjs/pwa": "^3.2.2",
    "@nuxtjs/robots": "^2.4.2",
    "@nuxtjs/sitemap": "^2.4.0",
    "@nuxtjs/yandex-metrika": "^1.3.0",
    "bootstrap": "^4.5.0",
    "bootstrap-vue": "^2.15.0",
    "cookie-universal-nuxt": "^2.1.4",
    "js-base64": "^3.6.0",
    "nuxt": "^2.14.0",
    "v-clipboard": "^2.2.3",
    "v-mask": "^2.2.3",
    "vue-clickaway": "^2.2.2",
    "vue-recaptcha": "^1.3.0",
    "vue-slick-carousel": "^1.0.6",
    "vue-virtual-scroll-list": "^2.3.1",
    "vuelidate": "^0.7.5"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^3.1.0",
    "@nuxtjs/eslint-module": "^2.0.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "core-js": "^3.8.1",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-nuxt": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gulp-csso": "^4.0.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "postcss-combine-media-query": "^1.0.1",
    "prettier": "^2.2.1",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": ""
    }
  },
  "lint-staged": {
    "**/*.{css,sass,less,scss}": [
      "prettier --write --confing ./prettier.config.js",
      "stylelint --fix --config ./stylelint.config.js"
    ],
    "**/*.{vue,js}": [
      "eslint --fix --config ./.eslintrc.js"
    ]
  }
}
